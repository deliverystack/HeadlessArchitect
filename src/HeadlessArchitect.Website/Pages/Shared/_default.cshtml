@model Deliverystack.RazorPages.Models.PageModelBase;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @(await Html.PartialAsync("__pageData", ((Deliverystack.StackContent.Models.Entries.ContentstackWebPageEntryModelBase) Model.EntryModel).PageData))
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                @await Component.InvokeAsync("TopNav")
            </div>
            <div style="border: 1px solid black; background: yellow; padding: 10px 10px 10px 10px">
                @await Component.InvokeAsync("Breadcrumb")
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div style="border: 1px solid black; background: red; padding: 10px 10px 10px 10px">
                @RenderBody()
            </div>
        </main>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2021 - HeadlessArchitect.Website - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        @await RenderSectionAsync("Scripts", required: false)
    </div>
</body>
</html>
